{% extends "layouts/base.njk" %}
{% block content %}
<div class="styles_hox-page-bg__9e3D7">
    <main>
        {% if ads %}
        <div class="ads1 banner-ads"></div>
        {% endif %}

        <section class="styles_hox-section__suGCm">
            <div class="styles_hox-flex__PiPii">
                <div class="styles_hox-left__FX0ug">
                    {% if list[0] %}
                    <a class="Card_hox-main-item__tA3U7"
                        href="/detail/{{ list[0].categoryId }}/{{ list[0].id }}">
                        <div class="Card_hox-img__DhWsq">
                            <div style="position:relative;width:100%;height:100%">
                                {% if list[0].img %}
                                <img alt="{{ list[0].title }}" decoding="async" data-nimg="fill"
                                    src="{{ list[0].img }}"
                                    style="height: 100%; width: 100%; inset: 0px; color: transparent;">
                                {% else %}
                                <div class="bg-gray-100" style="position:relative;width:100%;height:100%"></div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="Card_hox-card-body__BBmYv">
                            <h3 class="Card_hox-title__sI4Ag">{{ list[0].title }}</h3>
                            <p class="Card_hox-time__gLUdz">
                                {% if list[0].author %}<span>{{ list[0].author }}</span>&nbsp;{% endif
                                %}
                                <span>{{ list[0].publishTime | default(list[0].date) }}</span>
                            </p>
                            {% if list[0].description %}
                            <p class="Card_hox-desc__l30td">{{ list[0].description }}</p>
                            {% endif %}
                        </div>
                    </a>
                    {% endif %}
                </div>
                <div class="styles_hox-right__q7KoJ">
                    {% if list.slice(1, 5) %}
                    <div class="styles_hox-mod-hidden__lg8jF">
                        <section class="CardList_hox-card-list__EnBtW" style="--columns:2">
                            {% for item in list.slice(1, 5) %}
                            <a class="CardList_hox-item__oCoXp"
                                href="{% if item.url %}{{ item.url }}{% else %}/detail/{{ item.id }}{% endif %}">
                                <div style="">
                                    {% if item.img %}
                                    <img alt="{{ item.title }}" loading="lazy" width="50" height="50" decoding="async"
                                        data-nimg="1" class="CardList_hox-news-img__9ihry" src="{{ item.img }}"
                                        style="color: transparent;">
                                    {% else %}
                                    <div class="CardList_hox-news-img__9ihry bg-gray-100"
                                        style="width:50px;height:50px"></div>
                                    {% endif %}
                                </div>
                                <div class="CardList_hox-card-body___i6mM">
                                    <h3 class="CardList_hox-title__puw4C">{{ item.title }}</h3>
                                    <p class="CardList_hox-time__TbhNi">
                                        {% if item.author %}<span>{{ item.author }}</span>&nbsp;{% endif %}
                                        <span>{{ item.publishTime | default(item.date) }}</span>
                                    </p>
                                    {% if item.description %}
                                    <p class="CardList_hox-desc__BTYJA">{{ item.description }}</p>
                                    {% endif %}
                                </div>
                            </a>
                            {% endfor %}
                        </section>
                    </div>
                    {% endif %}

                    {% if list.slice(1 , 5) %}
                    <div class="styles_hox-pc-hidden__GofIb">
                        {% for item in list.slice(1 , 5) %}
                        <a class="Card_hox-main-item__tA3U7"
                            href="{% if item.url %}{{ item.url }}{% else %}/detail/{{ item.id }}{% endif %}">
                            <div class="Card_hox-img__DhWsq">
                                <div class="bg-gray-100" style="position:relative;width:100%;height:100%"></div>
                            </div>
                            <div class="Card_hox-card-body__BBmYv">
                                <h3 class="Card_hox-title__sI4Ag">{{ item.title }}</h3>
                                <p class="Card_hox-time__gLUdz">
                                    {% if item.author %}<span>{{ item.author }}</span>&nbsp;{% endif %}
                                    <span>{{ item.publishTime | default(item.date) }}</span>
                                </p>
                            </div>
                        </a>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
        </section>

        {% if ads %}
        <div class="ads2 banner-ads"></div>
        {% endif %}

        <section class="styles_hox-section__suGCm">
            <div class="styles_hox-flex__PiPii">
                <div class="styles_hox-left__FX0ug">
                    {% if list.slice(7 , 13) %}
                    <div>
                        <section class="CardColum_hox-card-list__CAdwS">
                            {% for item in list.slice(7 , 13) %}
                            <a class="CardColum_hox-item__0uOeK"
                                href="{% if item.url %}{{ item.url }}{% else %}/detail/{{ item.id }}{% endif %}">
                                <div class="CardColum_hox-img__QbQsN">
                                    <div style="position:relative;width:100%;height:100%">
                                        {% if item.img %}
                                        <img alt="{{ item.title }}" loading="lazy" decoding="async" data-nimg="fill"
                                            class="CardColum_hox-news-img__idWIN" src="{{ item.img }}"
                                            style="position: absolute; height: 100%; width: 100%; inset: 0px; color: transparent;">
                                        {% else %}
                                        <div class="CardColum_hox-news-img__idWIN bg-gray-100"
                                            style="position:relative;width:100%;height:100%"></div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="CardColum_hox-card-body__mLNwz">
                                    <h3>{{ item.title }}</h3>
                                    <p>
                                        {% if item.author %}<span>{{ item.author }}</span>{% endif %}
                                        <span>{{ item.publishTime | default(item.date) }}</span>
                                    </p>
                                </div>
                            </a>
                            {% endfor %}
                        </section>
                    </div>
                    {% endif %}
                </div>
                <div class="styles_hox-right__q7KoJ">
                    {% if list.slice(13 , 17) %}
                    <section class="CardList_hox-card-list__EnBtW" style="--columns:2">
                        {% for item in list.slice(13 , 17) %}
                        <a class="CardList_hox-item__oCoXp"
                            href="{% if item.url %}{{ item.url }}{% else %}/detail/{{ item.id }}{% endif %}">
                            <div style="">
                                {% if item.img %}
                                <img alt="{{ item.title }}" loading="lazy" width="50" height="50" decoding="async"
                                    data-nimg="1" class="CardList_hox-news-img__9ihry" src="{{ item.img }}"
                                    style="color: transparent;">
                                {% else %}
                                <div class="CardList_hox-news-img__9ihry bg-gray-100" style="width:50px;height:50px">
                                </div>
                                {% endif %}
                            </div>
                            <div class="CardList_hox-card-body___i6mM">
                                <h3 class="CardList_hox-title__puw4C">{{ item.title }}</h3>
                                <p class="CardList_hox-time__TbhNi">
                                    {% if item.author %}<span>{{ item.author }}</span>&nbsp;{% endif %}
                                    <span>{{ item.publishTime | default(item.date) }}</span>
                                </p>
                                {% if item.description %}
                                <p class="CardList_hox-desc__BTYJA">{{ item.description }}</p>
                                {% endif %}
                            </div>
                        </a>
                        {% endfor %}
                    </section>
                    {% endif %}
                </div>
            </div>
        </section>

        {% if ads %}
        <div class="ads3 multiple-ads"></div>
        {% endif %}

        {% if list.slice(17 , 29) %}
        <section class="styles_hox-section__suGCm">
            <section class="CardList_hox-card-list__EnBtW" style="--columns:4">
                {% for item in list.slice(17 , 29) %}
                <a class="CardList_hox-item__oCoXp"
                    href="{% if item.url %}{{ item.url }}{% else %}/detail/{{ item.id }}{% endif %}">
                    {% if item.img %}
                    <div class="CardList_hox-news-img__9ihry" style="width:50px;height:50px">
                        <img src="{{ item.img }}" alt="{{ item.title }}" loading="lazy" width="50" height="50">
                    </div>
                    {% else %}
                    <div class="CardList_hox-news-img__9ihry bg-gray-100" style="width:50px;height:50px"></div>
                    {% endif %}
                    <div class="CardList_hox-card-body___i6mM">
                        <h3 class="CardList_hox-title__puw4C">{{ item.title }}</h3>
                        <p class="CardList_hox-time__TbhNi">
                            {% if item.author %}<span>{{ item.author }}</span>&nbsp;{% endif %}
                            <span>{{ item.publishTime | default(item.date) }}</span>
                        </p>
                    </div>
                </a>
                {% endfor %}
            </section>
        </section>
        {% endif %}

        {% if list.slice(30 , 40) %}
        <section class="styles_hox-section__suGCm styles_hox-pc-hidden__GofIb">
            <h3 class="styles_hox-latest__tuBwr">Latest Articles</h3>
            {% for item in list.slice(30 , 40) %}
            <a class="Card_hox-main-item__tA3U7"
                href="{% if item.url %}{{ item.url }}{% else %}/detail/{{ item.id }}{% endif %}">
                <div class="Card_hox-img__DhWsq">
                    <div class="bg-gray-100" style="position:relative;width:100%;height:100%"></div>
                </div>
                <div class="Card_hox-card-body__BBmYv">
                    <h3 class="Card_hox-title__sI4Ag">{{ item.title }}</h3>
                    <p class="Card_hox-time__gLUdz">
                        {% if item.author %}<span>{{ item.author }}</span>&nbsp;{% endif %}
                        <span>{{ item.publishTime | default(item.date) }}</span>
                    </p>
                </div>
            </a>
            {% endfor %}
        </section>
        {% endif %}
    </main>
</div>
{% endblock %}