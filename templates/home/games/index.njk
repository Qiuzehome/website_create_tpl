{% extends "layouts/base.njk" %}
{% block content %}
<main class="mx-auto min-h-screen w-full">
  <!--  trending  -->
  <section class="max-w-screen-xl mx-auto px-2 md:px-0 py-6">
    <h2 class="text-xl md:text-2xl font-extrabold text-gray-800 mb-6">
      <span class="px-2 py-1 rounded-lg bg-[#FEF870] text-gray-900 shadow">‚ú® Trending Games</span>
    </h2>
    <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-3 md:gap-6">
      {% for g in list %}
      <a class="group bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-500 hover:-translate-y-1 flex flex-col" href="/game/{{ g.id }}">
        <div class="relative w-full h-40 overflow-hidden">
          <div class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 bg-gray-100"></div>
          <span class="absolute top-3 left-3 bg-[#FEF870] text-gray-900 text-xs font-bold px-2 py-0.5 rounded-full shadow">HOT</span>
        </div>
        <div class="flex-1 flex flex-col justify-between p-4">
          <h3 class="text-gray-800 font-semibold text-base line-clamp-1 group-hover:text-[#ebdf02] transition-colors">{{ g.name }}</h3>
          <div class="mt-2 flex justify-between items-center">
            <span class="text-xs text-gray-500 flex items-center gap-1">‚≠ê {{ g.plays }} plays</span>
            <button class="px-3 py-1 text-xs font-semibold bg-[#FEF870] text-gray-900 rounded-lg shadow hover:scale-105 transition-transform">‚ñ∂ Play</button>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </section>

  <!--  featured  -->
  <section class="max-w-screen-xl mx-auto px-2 md:px-0 py-4">
    <div class="text-center mb-6">
      <h2 class="text-2xl md:text-3xl font-black tracking-widest text-gray-900">FEATURED <span class="text-[#ebdf02]">GAMES</span></h2>
      <p class="text-gray-500 text-sm mt-2">Carefully Curated ¬∑ Play & Enjoy</p>
    </div>
    <div class="grid grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-3 md:gap-6">
      {% for g in featuredGames %}
      <a class="group block relative border-2 border-gray-900 rounded-[2rem] overflow-hidden hover:border-[#FEF870] transition-all duration-500" href="/game/{{ g.id }}">
        <div class="aspect-[5/6] w-full overflow-hidden">
          <div class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 bg-gray-100"></div>
        </div>
        <div class="absolute bottom-0 left-0 w-full bg-white/90 backdrop-blur-sm p-4 text-center border-t-2 border-gray-900">
          <h3 class="font-extrabold text-lg tracking-tight text-gray-900 group-hover:text-[#ebdf02] transition-colors line-clamp-1">{{ g.name }}</h3>
          <p class="text-xs text-gray-500 mt-1 italic">‚òÖ {{ g.plays }} plays</p>
        </div>
        <span class="absolute top-4 right-4 bg-[#FEF870] text-gray-900 text-[10px] font-bold px-2 py-0.5 rounded-full border border-gray-900">HOT</span>
      </a>
      {% endfor %}
    </div>
  </section>

  <!--  popular  -->
  <section class="max-w-screen-xl px-2 md:px-0 mx-auto py-4">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-xl md:text-2xl font-black tracking-wider text-gray-900">‚≠ê Popular <span class="text-[#ebdf02]">Games</span></h2>
      <a href="#" class="text-sm text-gray-500 hover:text-[#ebdf02] transition">View All ‚Üí</a>
    </div>
    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-3">
      {% for g in popularGames %}
      <a class="group relative flex flex-col items-center text-center" href="/game/{{ g.id }}">
        <div class="w-20 h-20 md:w-24 md:h-24 rounded-2xl overflow-hidden shadow-lg border-2 border-gray-200 group-hover:border-[#FEF870] transition">
          <div class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110 bg-gray-100"></div>
        </div>
        <h3 class="mt-2 text-xs md:text-sm font-semibold text-gray-800 group-hover:text-[#FEF870] transition-colors truncate w-20 md:w-24">{{ g.name }}</h3>
        <span class="absolute top-0 right-3 bg-black text-white text-[10px] font-bold px-2 py-0.5 rounded-b-md">Popular</span>
      </a>
      {% endfor %}
    </div>
  </section>

  <!--  hero  -->
  <section class="max-w-screen-xl mx-auto px-2 md:px-0 py-4">
    <h2 class="text-xl md:text-2xl font-extrabold text-gray-900 mb-6 tracking-wide">üåü Featured Games</h2>
    <div class="relative grid grid-cols-2 md:grid-cols-4 gap-6">
      {% for g in heroGames %}
      <a class="relative group rounded-3xl overflow-hidden shadow-2xl transform transition-all duration-500 hover:-translate-y-2 hover:scale-105" href="/game/{{ g.id }}">
        <div class="absolute inset-0 bg-gradient-to-br from-[#FEF870]/50 to-[#FFD700]/20 rounded-3xl blur-xl opacity-60"></div>
        <div class="relative w-full h-52 md:h-72 object-cover rounded-3xl shadow-lg transition-transform duration-700 group-hover:scale-110 bg-gray-100"></div>
        <div class="absolute bottom-4 left-4 right-4 bg-black/30 backdrop-blur-md p-4 rounded-xl">
          <h3 class="text-lg font-bold text-white line-clamp-1 group-hover:text-[#FEF870] transition-colors">{{ g.name }}</h3>
          <p class="text-xs text-gray-100 mt-1 line-clamp-2">{{ g.desc }}</p>
          <button class="mt-3 px-4 py-1 bg-[#FEF870] text-gray-900 font-semibold rounded-lg shadow hover:scale-105 transition-transform">PLAY</button>
        </div>
        <span class="absolute top-3 left-3 bg-[#FEF870] text-gray-900 text-xs font-bold px-2 py-0.5 rounded-full shadow">HOT</span>
      </a>
      {% endfor %}
    </div>
  </section>
</main>
{% endblock %}